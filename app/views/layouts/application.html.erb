<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) || "Untitled" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="fondotop"></div>
    <div id="container">
		<div id="menu">
			<div id="menu-nav" style="margin-left:20px;">
				<ul>

					<li>INICIO</li>
					<div style="width:1px; height:40px; float:left; margin-left:-35px; background-color:#fff;"></div>
					<li>QUIENES SOMOS</li>
					<div style="width:1px; height:40px; float:left; margin-left:-35px; background-color:#fff;"></div>
					<li>CABALLOS</li>
					<div style="width:1px; height:40px; float:left; margin-left:-35px; background-color:#fff;"></div>
					<li>UBICACION</li>
					<div style="width:1px; height:40px; float:left; margin-left:-35px; background-color:#fff;"></div>
					<li>STAFF</li>
					<div style="width:1px; height:40px; float:left; margin-left:-35px; background-color:#fff;"></div>
					<li style="margin-right:0px;">CONTACTO</li>


				</ul>
			</div>
		</div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
    <div id="footer">
			
    </div>	
  </body>
</html>